<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.mad-vpn" name="MAD VPN Controller" version="1.0.0" provider-name="MAD">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py" />
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Control OpenVPN service with remote keys</summary>
        <description lang="en_GB">Control OpenVPN service using colored remote keys. Red = Status, Green = Start, Yellow = Stop</description>
        <platform>all</platform>
        <license>GPL-2.0-or-later</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
